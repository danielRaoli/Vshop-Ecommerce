@model ProductViewModel


<h1 class="text-center mb-3">Edit Product</h1>

<form class="gap-2" asp-action="UpdateProduct"  method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="form-label"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input class="form-control" asp-for="ImageUrl" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock" class="form-label"></label>
        <input class="form-control" asp-for="Stock" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="form-label"></label>
        <input class="form-control" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-for="CategoryId" asp-items="@(ViewBag.Id)"></select>
    </div>

    <button class="btn btn-danger mt-4" type="submit" asp-action="UpdateProduct">Create</button>

</form>